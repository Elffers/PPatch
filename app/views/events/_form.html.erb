<%= form_for @event do |f| %>
  <% if @event.errors.any? %>
    <h2>Form is invalid</h2>
    <% for message in @event.errors.full_messages %>
      <%= message %>
    <% end %>
  <% end %>

  <div class = 'field'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class = 'field'>
    <%= f.label :time %>
    <%= f.text_field :time %>
  </div>
  <div class = 'field'>
    <%= f.label :venue %>
    <%= f.text_field :venue %>
  </div>
  <div class = 'field'>
    <%= f.label :type %>
    <%= f.text_field :type %>
  </div>
  <div class = 'field'>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <%= f.submit "Add event!" %>
  
<% end %>  

