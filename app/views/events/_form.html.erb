<H1>Create an Event!</H1>

<%= form_for @event do |f| %>
  <% if @event.errors.any? %>
    <h2>Form is invalid</h2>
    <ul>
      <% for message in @event.errors.full_messages %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class = 'field'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class = 'field'>
    <%= f.label :date %>
    <%= f.text_field :date %>
  </div>

  <div class = 'field'>
    <%= f.label :time %>
    <%= f.text_field :time %>
  </div>

  <div class = 'field'>
    <%= f.label :venue %>
    <%= f.text_field :venue %>
  </div>
 
  <div class = 'field'>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <%= f.submit "Add event!" %>

<% end %>  

