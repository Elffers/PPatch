<h1>BLAHG</h1>
<ul>
  <% @posts.each do |post|%>
  <li>
    <%= link_to "#{post.title}", post_path(post)  %>
    <% if current_user == post.user %>
      <%= link_to "Edit", edit_post_path(post) %>
      <%= link_to "Delete", post_path(post), method: :delete %>
    <% end %>
  </li>
  <% end %>
</ul>

<%= link_to "Add post", new_post_path %>

